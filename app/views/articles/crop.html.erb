<%= title crop(:image) %>

<h4>Preview</h4>
<div style="width:100px; height:100px; overflow:hidden">
  <%= image_tag @article.image_url(:large).to_s, :id => "preview" %>
</div>

<%= image_tag @article.image_url(:large).to_s, id:'cropbox' %>

<%= simple_form_for @article do |f| %>
  <% %w(x y w h).each do |attribute| %>
    <%= f.input "crop_#{attribute}", as: :hidden %>
  <% end %>
  <%= f.button :submit, 'Crop' %>
<% end %>
